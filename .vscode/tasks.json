{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose-debug",
            "type": "shell",
            "command": "docker compose down --remove-orphans && docker compose up --build washroom-service-debug",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*API server listening.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*API server listening.*$",
                    "endsPattern": "^.*API server listening.*$"
                }
            }
        },
        {
            "label": "docker-compose-down",
            "type": "shell",
            "command": "docker compose down --remove-orphans",
            "problemMatcher": []
        }
    ]
}
