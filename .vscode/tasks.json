{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose-up-debug",
            "type": "shell",
            "command": "docker compose down --remove-orphans && docker compose up --build washroom-service-debug",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*Listening and serving HTTP on.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting service.*$",
                    "endsPattern": "^.*Listening and serving HTTP on.*$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "debug-docker"
            }
        },
        {
            "label": "docker-compose-attach",
            "type": "shell",
            "command": "echo Waiting for debugger to attach...",
            "dependsOn": "docker-compose-up-debug",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "debug-docker",
                "close": true
            }
        },
        {
            "label": "docker-compose-down",
            "type": "shell",
            "command": "docker compose down --remove-orphans",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "debug-docker",
                "close": true
            }
        },
        {
            "label": "docker-compose-up-dev",
            "type": "shell",
            "command": "docker compose up --build washroom-service-dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*building.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "dev-docker"
            }
        }
    ]
}
